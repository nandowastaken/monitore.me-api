// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Monitor {
  id        Int     @id @default(autoincrement())
  nome      String
  email     String  @unique
  senha     String
  numero    String
  foto      String
  curso     Curso   @relation(fields: [cursoId], references: [id])
  materia   Materia @relation(fields: [materiaId], references: [id])
  cursoId   Int
  materiaId Int
}

model Curso {
  id      Int       @id @default(autoincrement())
  nome    String    @unique
  Monitor Monitor[]
  Materia Materia[]
}

model Materia {
  id      Int       @id @default(autoincrement())
  nome    String    @unique
  curso   Curso     @relation(fields: [cursoId], references: [id])
  cursoId Int
  Monitor Monitor[]
}

model Horario {
  id            Int             @id @default(autoincrement())
  monitor_id    Int             @unique
  HorarioInicio HorarioInicio[]
  HorarioFinal  HorarioFinal[]
}

model HorarioInicio {
  horario       Horario  @relation(fields: [horarioId], references: [id])
  horarioId     Int
  horarioInicio DateTime
  localizacao   String

  @@id([horarioId, horarioInicio])
}

model HorarioFinal {
  horario      Horario  @relation(fields: [horarioId], references: [id])
  horarioId    Int
  horarioFinal DateTime

  @@id([horarioId, horarioFinal])
}
